<% if error_str.length > 0 %>
    if (window.showNotification) {
      window.showNotification('<%="#{error_str}"%>', 'error');
    } else {
      alert('<%="#{error_str}"%>');
    }
<% else %>
    // ActionCable will handle table updates automatically
    action_select_no_js();
    
    if (window.showNotification) {
      window.showNotification('<%="#{success_str}"%>', 'success');
    } else {
      alert('<%="#{success_str}"%>');
    }
<% end %>

unwait();
