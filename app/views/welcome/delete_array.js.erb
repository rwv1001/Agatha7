// Only alert messages for user feedback
<% if success_str.present? %>
  if (window.showNotification) {
    window.showNotification('<%= success_str.html_safe %>', 'success');
  } else {
    alert('<%= success_str.html_safe %>');
  }
<% end %>
<% if error_str.present? %>
  if (window.showNotification) {
    window.showNotification('<%= error_str.html_safe %>', 'error');
  } else {
    alert('<%= error_str.html_safe %>');
  }
<% end %>
unwait();