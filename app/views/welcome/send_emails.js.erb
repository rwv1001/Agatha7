<% if error_str.length >0  %>
    <% str = "error_str"; %>
    if (window.showNotification) {
      window.showNotification('<%="#{status_val[str]}"%>', 'error');
    } else {
      alert('<%="#{status_val[str]}"%>');
    }
<% else  %>
    <% str = "success_str"; %>
    if (window.showNotification) {
      window.showNotification('<%="#{status_val[str]}"%>', 'success');
    } else {
      alert('<%="#{status_val[str]}"%>');
    }
<% end  %>
unwait();  
