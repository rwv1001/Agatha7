var spanId = '<%= "external_filter_argument_span_#{class_name}_#{filter_id}_#{elt_index}" %>';
var newHtml = `<%= j render(:partial => 'shared/external_filter_element', :object => external_filter_element) %>`;
var oldSpan = document.getElementById(spanId);

if (oldSpan) {
  var tempDiv = document.createElement('div');
  tempDiv.innerHTML = newHtml;
  var newElement = tempDiv.firstElementChild;
  oldSpan.replaceWith(newElement);
}

resizeExternalFilters('<%= "#{class_name}" %>');
unwait();
