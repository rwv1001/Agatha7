<% if(update_status) %>
    document.getElementById("user").innerHTML = "<%= j render(:partial => 'shared/create_user', :object => current_user) %>";
    if (window.showNotification) {
      window.showNotification('<%="Username #{current_user.name} has been successfully updated"%>', 'success');
    } else {
      alert('<%="Username #{current_user.name} has been successfully updated"%>');
    }
<% else %>
    if (window.showNotification) {
      window.showNotification('Unable to update user. Make sure new password and confirm password are identical', 'error');
    } else {
      alert('Unable to update user. Make sure new password and confirm password are identical');
    }
<% end %>
