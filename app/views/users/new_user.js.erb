<% if(save_status) %>
    <% if session[:administrator] %>
        document.getElementById("user").innerHTML = "<%= j render(:partial => 'shared/create_user', :object => new_user) %>";
    <% else %>
        document.getElementById("user").innerHTML = "<%= j render(:partial => 'shared/user', :object => new_user) %>";  
    <% end %>
    if (window.showNotification) {
      window.showNotification('<%="Username #{new_user.name} has been successfully created"%>', 'success');
    } else {
      alert('<%="Username #{new_user.name} has been successfully created"%>');
    }
<% else %>
    if (window.showNotification) {
      window.showNotification('Unable to create new user', 'error');
    } else {
      alert('Unable to create new user');
    }
<% end %>
